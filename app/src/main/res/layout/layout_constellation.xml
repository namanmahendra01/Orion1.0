<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardBackgroundColor="#0e1111"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:contentPadding="3dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.2"
        android:text="ORION TOP-8"
        android:textColor="#FFC107"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="right"
      />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">



        <View
            android:layout_width="2dp"
            android:layout_height="80dp"
            android:background="#FFC107"
            android:rotation="60"
            app:layout_constraintBottom_toTopOf="@+id/circleImageView7"
            app:layout_constraintEnd_toStartOf="@+id/circleImageView2"
            app:layout_constraintHorizontal_bias="0.348"
            app:layout_constraintStart_toEndOf="@+id/circleImageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:background="#FFC107"
            android:rotation="-55"
            app:layout_constraintBottom_toTopOf="@+id/circleImageView4"
            app:layout_constraintEnd_toStartOf="@+id/circleImageView4"
            app:layout_constraintHorizontal_bias="0.895"
            app:layout_constraintStart_toEndOf="@+id/circleImageView3"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
            app:layout_constraintVertical_bias="0.76" />

        <View
            android:id="@+id/view2"
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:background="#FFC107"
            android:rotation="20"
            app:layout_constraintBottom_toTopOf="@+id/circleImageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/circleImageView6"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView4"
            app:layout_constraintVertical_bias="0.571" />

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:background="#FFC107"
            android:rotation="10"
            app:layout_constraintBottom_toTopOf="@+id/circleImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.281"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView5"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:background="#FFC107"
            android:rotation="-20"
            app:layout_constraintBottom_toTopOf="@+id/circleImageView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.591"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView6"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/view3"
            android:layout_width="2dp"
            android:layout_height="80dp"
            android:background="#FFC107"
            android:rotation="-20"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.235"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView3"
            app:layout_constraintVertical_bias="0.076" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_star_filled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.234"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView5"
            app:layout_constraintVertical_bias="1.0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView7"
            android:layout_width="35dp"

            android:layout_height="35dp"
            android:src="@drawable/ic_star_filled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/circleImageView6"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toEndOf="@+id/circleImageView5"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
            app:layout_constraintVertical_bias="0.544" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView6"
            android:layout_width="35dp"

            android:layout_height="35dp"
            android:src="@drawable/ic_star_filled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.24"
            app:layout_constraintStart_toEndOf="@+id/circleImageView5"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView4"
            app:layout_constraintVertical_bias="0.381" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView5"
            android:layout_width="35dp"

            android:layout_height="35dp"
            android:src="@drawable/ic_star_filled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.305"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView3"
            app:layout_constraintVertical_bias="0.52" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView4"
            android:layout_width="35dp"

            android:layout_height="35dp"
            android:layout_marginBottom="73dp"
            android:src="@drawable/ic_star_filled"
            app:layout_constraintBottom_toTopOf="@+id/circleImageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
            app:layout_constraintVertical_bias="1.0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView3"
            android:layout_width="35dp"

            android:layout_height="35dp"
            android:src="@drawable/ic_star_filled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
            app:layout_constraintVertical_bias="0.106" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView2"
            android:layout_width="35dp"

            android:layout_height="35dp"
            android:src="@drawable/ic_star_filled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.426"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.015" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView8"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_star_filled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toEndOf="@+id/circleImageView"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView6"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>