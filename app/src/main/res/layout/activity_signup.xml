<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1e3d"
    android:id="@+id/rootView">

    <ProgressBar
        android:id="@+id/Registerrequestloadingprogressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-4dp"
        android:foregroundGravity="bottom"
        android:indeterminate="true"
        android:padding="0dp"
        android:theme="@style/Widget.AppCompat.ProgressBar.Horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get on Board"
            android:textSize="36dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/white"
            android:gravity="center|start"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:inputType="textFilter"
            android:hint="Name"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_."
            android:textColorHint="@color/grey"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:id="@+id/username"
            android:textSize="18sp"
            android:imeOptions="actionNext">
        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:hint="E-mail / Phone Number"
            android:inputType="textFilter"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_.@"
            android:textColorHint="@color/grey"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:id="@+id/input_email"
            android:textSize="18sp"
            android:imeOptions="actionNext"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890{}()[];:#^,.?!_`@$%\/=+-*'"
                android:maxLength="16"
                android:textColorHint="@color/grey"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:textSize="18sp"
                android:imeOptions="actionDone"/>
            <ImageView
                android:id="@+id/show_pass_btn"
                android:tag="0"
                android:layout_width="match_parent"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_visibility_off"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890{}()[];:#^,.?!_`@$%\/=+-*'"
            android:maxLength="16"
            android:textColorHint="@color/grey"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:id="@+id/confirm_password"
            android:textSize="18sp"
            android:imeOptions="actionDone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:text="Select your Domain"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/domain_selection"
            android:textSize="24sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical"
        android:weightSum="5">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="By creating an account, you agree to the Terms and Use and Privacy Policy"
            android:minLines="2"
            android:gravity="center_horizontal"
            android:textColor="@color/grey"
            android:id="@+id/terms_and_conditions"
            android:textSize="12sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Register"
            android:id="@+id/btn_register"
            android:textColor="#1b1e3d"
            android:textSize="16sp"
            android:background="@drawable/white_round_button">

        </androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:text="I'm already a member"
            android:gravity="center_horizontal"
            android:paddingBottom="15sp"
            android:textColor="@color/grey"
            android:id="@+id/link_login"
            android:textSize="14sp"/>
    </LinearLayout>

</RelativeLayout>